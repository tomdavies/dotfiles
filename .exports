# Make vim the default editor
export EDITOR="decaf"
# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"

#espresso SASS sugar vars
export SASS_DIRECTORY="sass"
export CSS_DIRECTORY="public/assets/css"

# export PATH="/Applications/MAMP/Library/bin/:/Applications/MAMP/bin/php5/bin/:/opt/local/bin:/usr/bin:/opt/local/sbin:/usr/local/share/npm/bin:~/bin:$PATH"
export PATH="/Applications/MAMP/bin/php5/bin/:/opt/local/bin:/usr/bin:/opt/local/sbin:/usr/local/share/npm/bin:~/bin:$PATH"

export PATH="/opt/mongo/bin:/usr/local/mysql/bin:$PATH"

export NODE_PATH="/usr/local/lib/node_modules:~/node_modules"